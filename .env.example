# Flask Configuration
# Copy this file to .env and modify values for your environment

# Secret key for Flask sessions (MUST change in production!)
# Generate secure key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev-secret-key-change-in-production

# Application port
PORT=5000

# Flask mode (production/development)
FLASK_ENV=production

# Debug mode (True/False)
FLASK_DEBUG=False

# Host to bind (0.0.0.0 for all interfaces, 127.0.0.1 for localhost)
FLASK_HOST=0.0.0.0